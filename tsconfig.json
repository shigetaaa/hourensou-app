{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        // "skipLibCheck": true, //ChakuraUI:AWSでエラーがでるための型チェックを１時的に無効化
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ], //追加
        "allowSyntheticDefaultImports": true, //追加
        "baseUrl": ".", //追加
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
